(load "Environment")
(load "Agent")

(ns PerformanceMeasure
  (:require Agent Environment))

(defn measure-performance []
  (update-score (count-clean-squares)))


(defn run []
  (prn "Evaluation beginning...")
  (Agent/start)
  (loop [time 0]
    (if (< time *time-limit*)
      (do
        (measure-performance)
        (recur (inc time)))
      (prn "SCORE: " *score*))))
